@using Connect.Koi

<div class="form-group app-jqfs-support-disable row">
  <label for="" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelRecaptcha</label>
  <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
    <div class="app-jqfs-recaptcha g-recaptcha" data-sitekey="@App.Settings.RecaptchaSiteKey" data-size="normal"></div>
  </div>
</div>

@if(App.Settings.RecaptchaSiteKey == "00000" || App.Settings.RecaptchaSecretKey == "00000") {
  <div class="alert alert-warning">
    @App.Resources.MessageDefaultRecaptchaKey
  </div>
}

<script src="https://www.google.com/recaptcha/api.js" async defer data-enableoptimizations="true"></script>