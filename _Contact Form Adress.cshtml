<script type="text/javascript" src="/desktopmodules/tosic_sexycontent/js/2sxc.api.min.js" data-enableoptimizations="100" ></script>
<link rel="stylesheet" href="@App.Path/dist/styles.css" data-enableoptimizations="100" />
<script src="@App.Path/dist/lib/smoke.min.js" ></script>
<script src="@App.Path/dist/form-send.js" type="text/javascript" data-enableoptimizations="100" ></script>

@using System.Linq
@using Connect.Koi

@{
  // get form config (data-type, web-api, etc.)
  var config = (Content.Presentation.SubmitType as IEnumerable<dynamic>).FirstOrDefault()  // custom for this form only...
      ?? (App.Settings.SubmitType as IEnumerable<dynamic>).First();    // ...or app-default configuration
}

<div class="app-jqfs-wrapper app-recaptcha-wrapper sc-element" data-webservice="@config.Webservice" >
      @* normal toolbar & toolbar to edit registrations of this course - opens the items and filters by this contentblock *@
      @Edit.Toolbar(Content)
      @Edit.Toolbar(toolbar: new object[] { 
          new { showCondition = true,
              command = new { action = "contentitems", 
                contentType = config.ContentType, 
                filters = new { ModuleId = Dnn.Module.ModuleID } 
            }
        }
      }, settings: new { hover="left", show = "hover" })

    <div class="app-jqfs-form">
        <!-- Vorname -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderName" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderName</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="SenderName" value="" required data-smk-msg="@App.Resources.LabelRequired">
          </div>
        </div>
        
        <!-- Nachname -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderSurname" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderSurname</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="SenderSurname" value="" required data-smk-msg="@App.Resources.LabelRequired">
          </div>
        </div>
        
        <!-- Strasse -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderStreet" @Koi.Class("all='control-label' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderStreet</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="SenderStreet" value="">
          </div>
        </div>

        <!-- PLZ -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderPLZ" @Koi.Class("all='control-label' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderZip</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="SenderPLZ" value="">
          </div>
        </div>

        <!-- Ort -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderCity" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderCity</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="SenderCity" value="" required data-smk-msg="@App.Resources.LabelRequired">
          </div>
        </div>

        <!-- Telefon -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderPhone" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderPhone</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="SenderPhone" value="" required data-smk-msg="@App.Resources.LabelRequired">
          </div>
        </div>

        <!-- Subject -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="Subject" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSubject</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="text" class="form-control" id="Subject" value="" required data-smk-msg="@App.Resources.LabelRequired">
          </div>
        </div>

        <!-- Message -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="Message" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelMessage</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <textarea class="form-control" rows="5" id="Message" required data-smk-msg="@App.Resources.LabelRequired"></textarea>
          </div>
        </div>

        <!-- Sender Mail -->
        <div class="form-group app-jqfs-support-disable row">
          <label for="SenderMail" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelSenderMail</label>
          <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
            <input type="email" class="form-control" id="SenderMail" value="" required data-smk-msg="@App.Resources.LabelValidEmail">
          </div>
        </div>

        <!-- Recaptcha -->
        @if(Content.Recaptcha ?? false) {
          <div class="form-group app-jqfs-support-disable row">
            <label for="" @Koi.Class("all='control-label app-jqfs-field-required' bs3='col col-xs-12 col-sm-4' bs4,oth='col-12 col-md-4'")>@App.Resources.LabelRecaptcha</label>
            <div @Koi.Class("bs3='col col-xs-12 col-sm-8' bs4,oth='col-12 col-md-8'")>
              <div class="app-jqfs-recaptcha" data-sitekey="@App.Settings.RecaptchaSiteKey"></div>
            </div>
          </div>
          @* load scripts - at page bottom - must be optimized bottom, otherwise it might load before the html is ready *@
          <script src="@App.Path/dist/recaptcha.js" type="text/javascript" data-enableoptimizations="999:bottom"></script>
          <script src="https://www.google.com/recaptcha/api.js?onload=appJqRecap&render=explicit" async defer data-enableoptimizations="1000:bottom"></script>
        }

        <!-- Messages / Send -->
        <div class="form-group row">
          @RenderPage("_Shared - Messages.cshtml")
          
          <!-- send button -->
          <div @Koi.Class("all='app-jqfs-support-disable' bs3='col col-xs-12' bs4,oth='col-12'")>
            <button id="sendFormWithApi" type="button" class="btn btn-primary">@App.Resources.ButtonSend</button>
          </div>
        </div>
    </div>

</div>

<script>
  $(function(){ window.appJqF.init(); }); // init the form - must trigger in-line, in case the form was added w/ajax
</script>



